<div class="box">
  <div id="header">
    <h2 class="login-title">Login</h2>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <span class="highlight"></span>
    <span class="bar"></span>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


  <div class="actions">
    <button><%= f.submit "Login" %></button>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>

 <div id="footer-box">
   <p class="footer-text">Not a member?
    <span class="sign-up"><%= link_to 'Sign up now', new_registration_path(resource_name) %> </span>
   </p>

</div>



</div>